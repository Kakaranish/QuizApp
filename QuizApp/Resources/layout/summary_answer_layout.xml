<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"
    android:background="@drawable/summary_answer_background"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/summary_questionNumberTextView"
        android:text="Question 1"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="3dp"
        android:background="#ededed"/>

    <TextView
        android:id="@+id/summary_questionTextView"
        android:text="The assassination of Julius Caesar was the result of a conspiracy by many Roman senators, he was stabbed by?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/summary_answerTextView"
        android:text="Junius Brutus"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
